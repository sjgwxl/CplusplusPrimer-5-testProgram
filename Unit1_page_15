#include <iostream>
//该例子问题是1.全部输入同样的数字会陷入循环中无法出来 2.输入全部不同的数字会不统计最后一个数
int main() {
    int currVal, val = 0;
    if (std::cin >> currVal) {
        int cnt = 1;
        while (std::cin >> val) {
            if (val == currVal) {
                cnt++;
            } else {
                std::cout << currVal << " occurs " << cnt << " times" << std::endl;
                currVal = val;
                cnt = 1;
            }
        }
        std::cout << currVal << " occurs " << cnt << " times" << std::endl;
    }
    return 0;
}
